{
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es6": true
  },
  "extends": ["next/core-web-vitals", "prettier", "next"],
  "rules": {
    "no-unused-vars": "warn",
    "semi": "off"
  },
  "prettier/prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "semi": false,
    "printWidth": 120,
    "tabWidth": 2,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParent": "always"
  }
}
